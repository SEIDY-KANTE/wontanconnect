{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/api": ["src/api/index.ts"],
      "@/api/*": ["src/api/*"],
      "@/core/*": ["src/core/*"],
      "@/components/*": ["src/components/*"],
      "@/design/*": ["src/design/*"],
      "@/features/*": ["src/features/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/utils/*": ["src/utils/*"],
      "@/assets/*": ["src/assets/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
